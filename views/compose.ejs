<%- include("header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label for="" class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Post</label>
    <textarea name="postBody" class="form-control" rows="8" cols="70"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>


